<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane nodeOrientation="RIGHT_TO_LEFT"
            prefHeight="780"
            prefWidth="1250"
            style="-fx-font-family: 'Segoe UI', 'Noto Sans Arabic', system-ui;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="noran.desktop.Controllers.ClientDataController">

    <!-- RIGHT SIDEBAR -->
    <left>
        <VBox fx:id="sidebar" alignment="TOP_RIGHT" prefWidth="260" spacing="14"
              style="-fx-background-color: white; -fx-padding: 18;">

            <VBox alignment="TOP_CENTER" spacing="16">
                <Button text="لوحة التحكم"
                        onAction="#onDashboardClick"
                        maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" />
                <Button text="العمليات الحالية"
                        maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" />
                <Button text="آخر العمليات المنفذة"
                        maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" />
                <Button text="أرشيف العملاء"
                        maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" />
                <Button text="أرشيف الملفات"
                        maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" />
                <Button text="إدارة الفواتير"
                        maxWidth="Infinity"
                        style="-fx-background-color: #c91e2b; -fx-text-fill: white; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12; -fx-background-radius: 8;" />
                <Button text="إدارة الصلاحيات"
                        maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" />
            </VBox>
        </VBox>
    </left>

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER" maxWidth="Infinity" spacing="75"
              style="-fx-padding: 12 0; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 12, 0.0, 0, 2);">

            <ImageView fitHeight="112" fitWidth="200" preserveRatio="true">
                <image>
                    <Image url="@images/Logo.png" />
                </image>
            </ImageView>

            <HBox alignment="CENTER_RIGHT" spacing="8"
                  style="-fx-background-color: #ffffff; -fx-padding: 6 10; -fx-background-radius: 20;">
                <ImageView fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@images/menu.png" />
                    </image>
                </ImageView>
                <Label text="إدارة الفواتير"
                       style="-fx-font-size: 15; -fx-text-fill: #111; -fx-padding: 0 12 0 12;" />
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="8" maxHeight="40"
                  style="-fx-background-color: #f3f4f6; -fx-padding: 6 10; -fx-background-radius: 20;">
                <TextField fx:id="searchField"
                           promptText="ابحث باسم العميل"
                           prefWidth="380"
                           style="-fx-background-color: transparent; -fx-border-width: 0;" />

                <ImageView fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@images/search.png" />
                    </image>
                </ImageView>
            </HBox>

            <StackPane alignment="CENTER" maxHeight="40"
                       style="-fx-padding: 6; -fx-background-radius: 18; -fx-background-color: #f3f4f6;">
                <ImageView fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@images/notification.png" />
                    </image>
                </ImageView>
            </StackPane>

            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 0 8;">
                <VBox alignment="CENTER_LEFT" spacing="2">
                    <Label fx:id="userNameLabel" text="ياسمين" style="-fx-font-weight: 600; -fx-font-size: 14;" />
                    <Label fx:id="userIdLabel" text="ID: 1234567" style="-fx-text-fill: #9b9b9b; -fx-font-size: 11;" />
                </VBox>

                <ImageView fitHeight="44" fitWidth="44" preserveRatio="true">
                    <image>
                        <Image url="@images/avatar.png" />
                    </image>
                </ImageView>
            </HBox>
        </HBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="24" alignment="TOP_CENTER" style="-fx-padding: 32 24;">
            <!-- Illustration -->
            <ImageView fitHeight="220" preserveRatio="true">
                <image>
                    <Image url="@images/invoice-illustration.png" />
                </image>
            </ImageView>

            <!-- Table container -->
            <StackPane style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 18; -fx-border-color: #eee; -fx-border-radius: 12;">
                <TableView fx:id="invoicesTable"
                           prefHeight="380"
                           prefWidth="880"
                           stylesheets="@invoices-table.css"
                           style="-fx-background-color: transparent;">

                    <columns>
                        <TableColumn fx:id="colClientName" text="اسم العميل" prefWidth="220"/>
                        <TableColumn fx:id="colClientNumber" text="الرقم التعريفي" prefWidth="220"/>
                        <TableColumn fx:id="colClientType" text="نوع العميل" prefWidth="220"/>
                        <TableColumn fx:id="colClientRank" text="رتبة العميل" prefWidth="220"/>
                    </columns>
                </TableView>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
