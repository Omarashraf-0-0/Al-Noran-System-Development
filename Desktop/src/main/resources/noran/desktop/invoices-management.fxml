<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<BorderPane nodeOrientation="RIGHT_TO_LEFT"
            prefHeight="700" prefWidth="1250"
            style="-fx-font-family: 'Segoe UI', 'Noto Sans Arabic', system-ui;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="noran.desktop.HelloController">

    <stylesheets>
        <String fx:value="@invoices-table.css" />
    </stylesheets>

    <!-- ======= Sidebar ======= -->
    <left>
        <VBox fx:id="sidebar" alignment="TOP_RIGHT" prefWidth="260" spacing="14" style="-fx-background-color: white; -fx-padding: 18; -fx-border-color: transparent;">

            <!-- menu as buttons -->
            <VBox alignment="TOP_CENTER" spacing="16">
                <Button fx:id="btnInvoices" onAction="#onDashboardClick" maxWidth="Infinity" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" text="لوحة التحكم" />
                <Button fx:id="btnCurrentOps" maxWidth="Infinity" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" text="العمليات الحالية" />
                <Button fx:id="btnRecentOps" maxWidth="Infinity" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" text="آخر العمليات المنفذة" />
                <Button fx:id="btnClients" maxWidth="Infinity" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" text="أرشيف العملاء" />
                <Button fx:id="btnFiles" maxWidth="Infinity" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" text="أرشيف الملفات" />
                <Button maxWidth="Infinity" onAction="#invoice_management_btn_handle" mnemonicParsing="false" style="-fx-background-color: #c91e2b; -fx-text-fill: white; -fx-padding: 8 16; -fx-font-size: 14; -fx-background-radius: 8; -fx-alignment: CENTER_LEFT;" text="إدارة الفواتير" />
                <Button fx:id="btnPermissions" maxWidth="Infinity" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 13; -fx-alignment: CENTER_LEFT; -fx-padding: 8 12;" text="إدارة الصلاحيات" />
            </VBox>


        </VBox>
    </left>


    <!-- ======= Top Bar ======= -->
    <top>
        <HBox alignment="CENTER" maxWidth="Infinity" spacing="75" style="-fx-padding: 12 0; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 12, 0.0, 0, 2); -fx-background-radius: 0;">


            <!-- logo in top bar (right side) -->
            <ImageView fx:id="logoImage" fitHeight="112" fitWidth="200" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/Logo.png" />
                </image>
            </ImageView>

            <!-- small page title -->
            <HBox alignment="CENTER_RIGHT" spacing="8" style="-fx-background-color: #ffffff; -fx-padding: 6 10; -fx-background-radius: 20;">

                <ImageView fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@images/menu.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 15; -fx-text-fill: #111; -fx-padding: 0 12 0 12;" text="إدارة الفواتير" />

            </HBox>

            <!-- Search -->
            <HBox alignment="CENTER_RIGHT" maxHeight="40" spacing="8" style="-fx-background-color: #f3f4f6; -fx-padding: 6 10; -fx-background-radius: 20;">
                <TextField fx:id="searchField" onAction="#onSearch" prefWidth="380" promptText="ابحث برقم الشحنة" style="-fx-background-color: transparent; -fx-border-width: 0;" />
                <ImageView fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@images/search.png" />
                    </image>
                </ImageView>
            </HBox>

            <!-- notification icon -->
            <StackPane fx:id="notifBtn" alignment="CENTER" maxHeight="40" style="-fx-padding: 6; -fx-background-radius: 18; -fx-background-color: #f3f4f6;">
                <ImageView fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@images/notification.png" />
                    </image>
                </ImageView>
            </StackPane>

            <!-- user avatar + name + id -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 0 8;">
                <VBox alignment="CENTER_LEFT" spacing="2">
                    <Label fx:id="userNameLabel" style="-fx-font-weight: 600; -fx-font-size: 14;" text="ياسمين" />
                    <Label fx:id="userIdLabel" style="-fx-text-fill: #9b9b9b; -fx-font-size: 11;" text="ID: 1234567" />
                </VBox>

                <ImageView fitHeight="44" fitWidth="44" preserveRatio="true">
                    <image>
                        <Image url="@images/avatar.png" />
                    </image>
                </ImageView>
            </HBox>

        </HBox>
    </top>


    <!-- ======= Main Content ======= -->
    <center>
        <VBox spacing="18" style="-fx-padding: 18 24;">
            <!-- Client Info -->
            <VBox spacing="8"
                  style="-fx-background-color: white; -fx-padding: 18; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                <HBox spacing="25">
                    <Label text="" style="-fx-font-weight: bold;" />
                    <Label fx:id="clientNameLabel" text="—" style="-fx-font-weight: bold;"/>
                    <Label text="-" style="-fx-font-weight: bold;" />
                    <Label fx:id="taxNumberLabel" text="—" style="-fx-font-weight: bold;"/>
                </HBox>
                <HBox spacing="25">
                    <Label text="" style="-fx-font-weight: bold;" />
                    <Label fx:id="invoiceNumberLabel" text="—" style="-fx-font-weight: bold;"/>
                    <Label text="" style="-fx-font-weight: bold;" />
                    <Label fx:id="invoiceDateLabel" text="—" style="-fx-font-weight: bold;"/>
                </HBox>
            </VBox>

            <!-- Shipment Dropdown -->
            <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 4 0 12 0;">
                <Label text="الشحنة:" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="clientShipmentComboBox" prefWidth="250"
                          promptText="اختر الشحنة"
                          style="-fx-background-radius: 8; -fx-background-color: #fff;" />
            </HBox>

            <!-- Invoices Table -->
            <StackPane style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16; -fx-border-color: #f0f0f0; -fx-border-radius: 12;">
                <ImageView fitWidth="350" mouseTransparent="true" opacity="0.07" preserveRatio="true">
                    <image>
                        <Image url="@images/Logo.png" />
                    </image>
                </ImageView>

                <TableView fx:id="invoicesTable"
                           prefHeight="350"
                           style="-fx-background-color: transparent;"
                           stylesheets="@invoices-table.css">
                    <columns>
                        <TableColumn fx:id="colDescription" text="الوصف" prefWidth="460" />
                        <TableColumn fx:id="colPrice" text="السعر" prefWidth="200" />
                        <TableColumn fx:id="colDate" text="الحالة" prefWidth="220" />
                    </columns>
                </TableView>
            </StackPane>

            <!-- Buttons -->
            <HBox alignment="CENTER_RIGHT" spacing="12" style="-fx-padding: 12 0 0 0;">
                <Button onAction="#addNewInvoiceRow" style="-fx-background-color: #c91e2b; -fx-text-fill: white; -fx-padding: 10 18; -fx-background-radius: 8;" text="اضافة عنصر جديد +" />
                <Button style="-fx-background-color: #c91e2b; -fx-text-fill: white; -fx-padding: 10 18; -fx-background-radius: 8;" text="تغيير حالة الفاتورة" />
                <Button fx:id="deleteRowBtn"
                        onAction="#deleteSelectedRow"
                        style="-fx-background-color: #c91e2b; -fx-text-fill: white; -fx-padding: 10 18; -fx-background-radius: 8;" text="مسح العنصر" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="totalCost" style="-fx-font-weight: 600; -fx-font-size: 14;" text="المجموع الكلي :" />
                <Button onAction="#downloadInvoicePDF" style="-fx-background-color: #eef2ff; -fx-text-fill: #2a2a2a; -fx-padding: 10 18; -fx-background-radius: 8;" text="تحميل الفاتورة" />
            </HBox>

        </VBox>
    </center>

</BorderPane>
